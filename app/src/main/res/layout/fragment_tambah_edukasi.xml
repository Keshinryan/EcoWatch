<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Admin.TambahEdukasiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Tambah Edukasi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Edukasi"
            android:layout_marginTop="44dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tambahNamaEdukasi"
                android:layout_width="match_parent"
                android:background="@drawable/input_text"
                android:layout_height="match_parent"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tambahDeskripsiEdukasi"
                android:layout_width="match_parent"
                android:background="@drawable/input_text"
                android:layout_height="match_parent"
                android:textColorHint="@color/white"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/tambahEdukasi"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="260dp"
            android:text="Tambah"
            android:backgroundTint="#7EBDEF"/>
    </LinearLayout>

</FrameLayout>