<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.User.PrediksiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="124dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Prediksi Cuaca"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelembapan Udara"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Lembab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_text"
                android:maxLines="1"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suhu Rata - Rata"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/suhu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_text"
                android:maxLines="1"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kecepatan Angin Rata - Rata"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/k_angin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_text"
                android:maxLines="1"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hasil"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Hasil"
                android:textColor="@color/teal_200"
                android:textSize="16dp" />

            <Button
                android:id="@+id/deteksi"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/blue"
                android:text="Prediksi" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>